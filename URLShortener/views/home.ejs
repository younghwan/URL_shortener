    <body role="document">
        <div class="container theme-showcase" role="main">
            <div class="jumbotron">
                <h1>URL Shortener</h1>
            </div>

            <div class="input-group">
                <input id="input" type="text" class="form-control" placeholder="Shorten your link">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button" id="OK">Shorten</button>
                    <script>
                        $("#OK").click(function(i,item){
                            $.ajax({
                                url:'/check',
                                async:true,
                                type:'POST',
                                data:{
                                    input:$("input").val()
                                },
                                dataType:'text',
                                success:function(data){
                                    alert(data);
                                },
                                error:function(err){
                                    alert("보내기 실패" + err);
                                }
                            })
                        })
                    </script>
                </span>
            </div>
        </div>
